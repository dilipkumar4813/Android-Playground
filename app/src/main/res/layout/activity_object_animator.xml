<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_object_animator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.playground.dilip.androidplayground.ObjectAnimatorActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/image_test"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="112dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:text="Rotate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rotate"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Rotate Y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rotate_y"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@+id/button_rotate"
        app:layout_constraintLeft_toRightOf="@+id/button_rotate"
        android:layout_marginLeft="24dp"
        app:layout_constraintRight_toLeftOf="@+id/button_rotate_x"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp" />

    <Button
        android:text="Rotate X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rotate_x"
        app:layout_constraintBottom_toBottomOf="@+id/button_rotate_y"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp" />

    <Button
        android:text="Rotation XY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_rotation_xy"
        app:layout_constraintBottom_toTopOf="@+id/button_rotate_x"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Grow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_grow"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@+id/button_rotation_xy"
        app:layout_constraintLeft_toRightOf="@+id/button_rotation_xy"
        android:layout_marginLeft="16dp" />

    <Button
        android:text="Shrink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_shrink"
        app:layout_constraintBottom_toBottomOf="@+id/button_grow"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/button_grow"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.92" />
</android.support.constraint.ConstraintLayout>
